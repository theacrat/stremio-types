{
	"name": "stremio-types",
	"version": "0.52.0",
	"description": "Types generated from stremio-core",
	"repository": {
		"type": "git",
		"url": "https://github.com/theacrat/stremio-types"
	},
	"license": "MIT",
	"author": {
		"name": "thea"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "bun run generate",
		"build": "tsdown && bun ./scripts/update-version.ts",
		"build:ci": "tsdown",
		"format": "bun prettier --write --ignore-unknown",
		"generate": "bun ./scripts/find-stremio-types && bun ./scripts/process-bindings.ts && bun format .",
		"lint": "bun eslint",
		"prepare": "husky",
		"release": "bun run build && bun publish",
		"setup": "bun ./scripts/setup-core.ts",
		"setup:latest": "bun ./scripts/setup-core.ts --latest"
	},
	"lint-staged": {
		"*": [
			"bun lint",
			"bun format"
		]
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/bun": "^1.3.6",
		"@types/node": "^25.0.8",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-package-json": "^0.88.1",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-packagejson": "^3.0.0",
		"tsdown": "^0.18.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0"
	}
}
